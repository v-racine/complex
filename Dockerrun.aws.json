{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "client",
      "image": "vracine/multi-client:TAG_PLACEHOLDER",
      "hostname": "client",
      "essential": false,
      "memory": 128
    },
    {
      "name": "server",
      "image": "vracine/multi-server:TAG_PLACEHOLDER",
      "hostname": "api",
      "essential": false,
      "memory": 128,
      "environment": [
        { "name": "REDIS_HOST", "value": "YOUR_ELASTICACHE_ENDPOINT" },
        { "name": "REDIS_PORT", "value": "6379" },
        { "name": "PGUSER", "value": "postgres" },
        { "name": "PGHOST", "value": "YOUR_RDS_ENDPOINT" },
        { "name": "PGDATABASE", "value": "fibvalues" },
        { "name": "PGPASSWORD", "value": "YOUR_RDS_PASSWORD" },
        { "name": "PGPORT", "value": "5432" }
      ]
    },
    {
      "name": "worker",
      "image": "vracine/multi-worker:TAG_PLACEHOLDER",
      "hostname": "worker",
      "essential": false,
      "memory": 128,
      "environment": [
        { "name": "REDIS_HOST", "value": "YOUR_ELASTICACHE_ENDPOINT" },
        { "name": "REDIS_PORT", "value": "6379" }
      ]
    },
    {
      "name": "nginx",
      "image": "vracine/multi-nginx:TAG_PLACEHOLDER",
      "hostname": "nginx",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": ["client", "server"]
    }
  ]
}
